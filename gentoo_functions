alias gentoo-update='sudo layman -S; sudo emerge --sync'
alias gentoo-upgrade='sudo emerge --update --deep --with-bdeps=y --newuse --ask --verbose @world'

accept_keyword() {
	echo "$1 ~amd64" | sudo tee -a /etc/portage/package.accept_keywords
	sudo sort -u /etc/portage/package.accept_keywords -o /etc/portage/package.accept_keywords
}
