alias gentoo-update='sudo bash -c "layman -S; emerge --sync"'
alias gentoo-upgrade='sudo bash -c "mount -o remount,size=12G /var/tmp/portage; emerge --update --deep --with-bdeps=y --newuse --ask --verbose --keep-going @world; mount -o remount,size=2G /var/tmp/portage"'
alias gentoo-clean-elogs='sudo rm -f /var/log/portage/elog/*'

accept_keyword() {
	echo "$1 ~amd64" | sudo tee -a /etc/portage/package.accept_keywords
	sudo sort -u /etc/portage/package.accept_keywords -o /etc/portage/package.accept_keywords
}

accept_x86_32() {
	echo "$1 abi_x86_32" | sudo tee -a /etc/portage/package.use/x86_32
	sudo sort -u /etc/portage/package.use/x86_32 -o /etc/portage/package.use/x86_32
}
